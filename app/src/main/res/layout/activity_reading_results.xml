<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadingResults">

    <Button
        android:id="@+id/backButton3"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:text="Back to Main Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/sendSMS"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:text="Send text to GP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />

    <Button
        android:id="@+id/saveRecords"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:text="Save Records"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803" />

    <TableLayout
        android:layout_width="411dp"
        android:layout_height="435dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/saveRecords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/mainTextReadingResults"
                android:layout_width="247dp"
                android:layout_height="73dp"
                android:gravity="center"
                android:text="Reading Results"
                android:textSize="36sp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/subTextDate"
                android:layout_width="323dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Date"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/subText18"
                android:layout_width="347dp"
                android:layout_height="50dp"
                android:gravity="center|start"
                android:text="Temperature"
                android:textSize="24sp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">


            <TextView
                android:id="@+id/subTextTempNum"
                android:layout_width="347dp"
                android:layout_height="54dp"
                android:textSize="18sp"
                android:layout_weight="1.5"/>

            <TextView
                android:id="@+id/subTextTempReading"
                android:layout_width="347dp"
                android:layout_height="54dp"
                android:textSize="18sp"
                android:layout_weight="0.5"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/subText38"
                android:layout_width="347dp"
                android:layout_height="50dp"
                android:text="Blood Pressure"
                android:textSize="24sp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:id="@+id/subTextBpNum"
                android:layout_width="346dp"
                android:layout_height="65dp"
                android:textSize="18sp"
                android:layout_weight="1.5"/>

            <TextView
                android:id="@+id/subTextBpReading"
                android:layout_width="346dp"
                android:layout_height="65dp"
                android:textSize="18sp"
                android:layout_weight="0.5"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/subText12"
                android:layout_width="347dp"
                android:layout_height="50dp"
                android:text="Heartrate"
                android:textSize="24sp"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:id="@+id/subTextHeartNum"
                android:layout_width="348dp"
                android:layout_height="66dp"
                android:textSize="18sp"
                android:layout_weight="1.5"/>

            <TextView
                android:id="@+id/subTextHeartReading"
                android:layout_width="348dp"
                android:layout_height="66dp"
                android:textSize="18sp"
                android:layout_weight="0.5"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>